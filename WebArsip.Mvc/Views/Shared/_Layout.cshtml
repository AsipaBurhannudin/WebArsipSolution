@using WebArsip.Mvc.Helpers
@{
    var isLoggedIn = UserRoleHelper.IsLoggedIn(Context);
    var email = UserRoleHelper.GetUserEmail(Context);
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"] - WebArsip</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    @if (isLoggedIn)
    {
        <div class="d-flex" id="wrapper">
            <div class="bg-dark border-right" id="sidebar-wrapper" style="min-height: 100vh; width: 250px;">
                <div class="sidebar-heading text-white">📂 WebArsip</div>
                <div class="list-group list-group-flush">
                    <!-- isi menu sesuai role -->
                    @if (UserRoleHelper.HasAccess(Context, "Dashboard"))
                    {
                        <a asp-controller="Dashboard" asp-action="Index" class="list-group-item list-group-item-action bg-dark text-white">🏠 Dashboard</a>
                    }
                    @* Tambahin menu lain sesuai role *@
                    <form asp-controller="Auth" asp-action="Logout" method="post" class="mt-3">
                        <button type="submit" class="btn btn-danger w-100">🚪 Logout</button>
                    </form>
                </div>
            </div>
            <div id="page-content-wrapper" class="w-100">
                <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                    <span class="navbar-text ms-auto">
                        <strong>@email</strong>
                    </span>
                </nav>
                <div class="container-fluid mt-4">
                    @RenderBody()
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="container mt-5">
            @RenderBody()
        </div>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>