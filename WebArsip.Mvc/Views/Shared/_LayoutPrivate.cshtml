@using WebArsip.Mvc.Helpers
@inject IConfiguration Configuration
@{
    var email = UserRoleHelper.GetUserEmail(Context) ?? "Unknown";
    var menus = SidebarHelper.GetAccessibleMenus(Context);
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"] - WebArsip</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- 🔹 CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- 🔹 DataTables CSS -->
    <link rel="stylesheet"
          href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />

    @*<!-- 🔹 SweetAlert2 CSS (opsional tapi bagus untuk style konsisten) -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/@sweetalert2/theme-bootstrap-4/bootstrap-4.min.css" />*@
          
</head>
<body>
    <div id="wrapper">
        <!-- 🔹 Sidebar -->
        <div id="sidebar-wrapper">
            <div class="sidebar-heading text-white p-3">📂 WebArsip</div>
            <div class="list-group list-group-flush">
                @foreach (var menu in menus)
                {
                    <a asp-controller="@menu.Controller" asp-action="Index"
                       class="list-group-item bg-dark @(ViewContext.RouteData.Values["controller"]?.ToString() == menu.Controller ? "active" : "")">
                        @menu.Label
                    </a>
                }
            </div>

            <form asp-controller="Auth" asp-action="Logout" method="post" class="p-3">
                <button type="submit" class="btn btn-danger w-100">🚪 Logout</button>
            </form>
        </div>

        <!-- 🔹 Main content -->
        <div id="page-content-wrapper">
            <nav class="navbar navbar-light bg-light border-bottom d-flex justify-content-between align-items-center px-3">
                <div><button class="btn btn-outline-secondary" id="menu-toggle">☰</button></div>
                <div><span class="navbar-text"><strong>@email</strong></span></div>
            </nav>

            <div class="container-fluid mt-5">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
    <script>
        window.API_BASE_URL = '@(Configuration["ApiSettings:BaseUrl"])';
        window.JWT_TOKEN = '@Context.Session.GetString("JWToken")';
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>