@using WebArsip.Mvc.Helpers
@inject IConfiguration Configuration
@{
    var email = UserRoleHelper.GetUserEmail(Context) ?? "Unknown";
    var menus = SidebarHelper.GetAccessibleMenus(Context);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - WebArsip</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Core CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/layout-private.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a2e0ef5b12.js" crossorigin="anonymous"></script>
</head>

<body>
    <div id="wrapper" class="d-flex">
        <!-- 🔹 SIDEBAR -->
        <nav id="sidebar-wrapper">
            <div class="sidebar-heading text-center py-3">
                📂 <strong>WebArsip JLM</strong>
            </div>

            <div class="list-group list-group-flush">
                @foreach (var menu in menus)
                {
                    var isActive = ViewContext.RouteData.Values["controller"]?.ToString() == menu.Controller ? "active" : "";
                    <a asp-controller="@menu.Controller" asp-action="Index"
                       class="list-group-item list-group-item-action @isActive">
                        @menu.Label
                    </a>
                }
            </div>
        </nav>

        <!-- 🔹 MAIN CONTENT -->
        <div id="page-content-wrapper" class="flex-fill">
            <!-- 🔸 NAVBAR -->
            <nav class="navbar navbar-expand-lg navbar-dark">
                <div class="d-flex align-items-center">
                    <!-- Toggle Icon (morph ☰ / ✕) -->
                    <button id="menu-toggle" type="button">
                        <span class="toggle-icon"></span>
                    </button>
                    <span class="navbar-brand fw-semibold ms-2">Dashboard</span>
                </div>

                <!-- Profile Dropdown -->
                <div class="ms-auto d-flex align-items-center">
                    <div class="profile-dropdown position-relative me-2">
                        <img id="profile-icon" src="~/images/avatar-default.png" alt="Profile" />
                        <div id="profile-menu" class="profile-menu">
                            <a href="#"><i class="fas fa-user-circle me-2 text-primary"></i> Profil</a>
                            <a href="#"><i class="fas fa-cog me-2 text-warning"></i> Pengaturan</a>
                            <hr class="dropdown-divider" />
                            <form asp-controller="Auth" asp-action="Logout" method="post" class="m-0">
                                <button type="submit"><i class="fas fa-sign-out-alt me-2 text-danger"></i> Logout</button>
                            </form>
                        </div>
                    </div>

                </div>
            </nav>

            <!-- 🔸 CONTENT -->
            <main class="container-fluid mt-4 mb-5 dashboard-wrapper">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        window.API_BASE_URL = '@(Configuration["ApiSettings:BaseUrl"])';
        window.JWT_TOKEN = '@Context.Session.GetString("JWToken")';
    </script>

    <script src="~/js/layout-private.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>