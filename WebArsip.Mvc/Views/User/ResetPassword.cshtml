@model WebArsip.Mvc.Models.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = "_LayoutPrivate";
}

<link rel="stylesheet" href="~/css/user/form.css" />
<link rel="stylesheet" href="~/css/_responsive.css" />
<link rel="stylesheet" href="~/css/user/user-edit.css" />

<div class="container mt-5 mb-5">
    <div class="card glass-card shadow-lg border-0 p-4">
        <h3 class="fw-semibold text-gradient mb-4">
            <i class="bi bi-shield-lock"></i> Reset Password
        </h3>

        <form asp-action="ResetPassword" method="post">
            <input type="hidden" asp-for="UserId" />

            <div class="mb-3">
                <label class="form-label">Password Baru</label>

                <input type="password"
                       id="NewPassword"
                       name="NewPassword"
                       class="form-control" />

                <!-- Show Password -->
                <div class="show-password mt-1">
                    <input type="checkbox" id="ShowPassword" />
                    <label for="ShowPassword">Tampilkan Password</label>
                </div>

                <!-- Checklist -->
                <ul class="password-checklist text-white mt-2">
                    <li id="rule-length">Minimal 6 karakter</li>
                    <li id="rule-number">Mengandung angka</li>
                    <li id="rule-upper">Mengandung huruf kapital</li>
                </ul>

                <!-- Strength Bar -->
                <div class="strength-bar">
                    <div id="StrengthBar" class="strength-level"></div>
                </div>
            </div>

            <!-- Confirm Password -->
            <div class="mb-3">
                <label class="form-label">Konfirmasi Password</label>

                <input type="password"
                       id="ConfirmPassword"
                       name="ConfirmPassword"
                       class="form-control" />

                <!-- Show Confirm Password -->
                <div class="show-password mt-1">
                    <input type="checkbox" id="ShowConfirmPassword" />
                    <label for="ShowConfirmPassword">Tampilkan Password</label>
                </div>

                <span id="ConfirmMessage" class="validation-message text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit"
                        id="ResetBtn"
                        class="btn btn-success rounded-pill px-4"
                        disabled>
                    <i class="bi bi-check"></i> Reset
                </button>
                <a asp-action="Index" class="btn btn-secondary rounded-pill px-4">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>

<script src="~/js/user/user-edit-validation.js"></script>