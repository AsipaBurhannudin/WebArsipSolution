@using WebArsip.Mvc.Models.ViewModels
@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Roles";
    Layout = "_LayoutPrivate";
}

<div class="d-flex justify-content-between mb-3">
    <h2>👤 Roles</h2>
    <a asp-action="Create" class="btn btn-primary">➕ Add Role</a>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>No</th>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            int no = 1;
            foreach (var role in Model)
            {
                    <tr>
                        <td>@no</td>
                        <td>@role.RoleName</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@role.RoleId" class="btn btn-sm btn-warning">✏ Edit</a>
                            <form asp-action="Delete" asp-route-id="@role.RoleId" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-sm btn-danger"
                                        onclick="return confirm('Yakin hapus role ini?')">🗑 Delete</button>
                            </form>
                        </td>
                    </tr>
                no++;
            }
        }
    </tbody>
</table>