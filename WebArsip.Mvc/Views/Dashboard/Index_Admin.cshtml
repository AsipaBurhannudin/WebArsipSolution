@model WebArsip.Mvc.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard Admin";
    Layout = "_LayoutPrivate";
}

<div class="dashboard-wrapper container-fluid">
    <h2 class="mb-4">📊 Dashboard Admin</h2>

    <div class="row mt-4 text-center">
        <div class="col-md-3">
            <div class="dashboard-card bg-primary">
                <div id="countDocuments" class="count-value display-6">0</div>
                <small>Documents</small>
            </div>
        </div>
        <div class="col-md-3">
            <div class="dashboard-card bg-success">
                <div id="countUsers" class="count-value display-6">0</div>
                <small>Users</small>
            </div>
        </div>
        <div class="col-md-3">
            <div class="dashboard-card bg-warning">
                <div id="countAuditLogs" class="count-value display-6">0</div>
                <small>Audit Logs</small>
            </div>
        </div>
        <div class="col-md-3">
            <div class="dashboard-card bg-info">
                <div id="countRoles" class="count-value display-6">0</div>
                <small>Roles</small>
            </div>
        </div>
    </div>
    <div class="row mt-3 text-center">
        <div class="col-md-6 mx-auto">
            <div class="dashboard-card bg-dark">
                <div id="countPermissions" class="count-value display-6">0</div>
                <small>Permissions</small>
            </div>
        </div>
    </div>

    <div id="chart-section" class="mt-5">
        <h4 class="mb-4 text-center">📈 Analytics Overview</h4>
        <div class="row">
            <div class="col-md-6 mb-4">
                <canvas id="countPieChart"></canvas>
            </div>
            <div class="col-md-6 mb-3">
                <canvas id="activityChart"></canvas>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        window.JWT_TOKEN = '@Context.Session.GetString("JWToken")';
    </script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/dashboard/dashboard-admin.js"></script>
}