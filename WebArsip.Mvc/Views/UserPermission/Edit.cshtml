@model WebArsip.Mvc.Models.ViewModels.UserPermissionEditViewModel
@{
    ViewData["Title"] = "Edit User Permission";
    Layout = "_LayoutPrivate";
}

<div class="container mt-4">
    <h2>✏ Edit User Permission</h2>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="UserPermissionId" />

        <div class="mb-3">
            <label asp-for="UserId" class="form-label">User</label>
            <select asp-for="UserId" asp-items="ViewBag.Users" class="form-select"></select>
        </div>

        <div class="mb-3">
            <label asp-for="DocumentId" class="form-label">Document</label>
            <select asp-for="DocumentId" asp-items="ViewBag.Documents" class="form-select"></select>
        </div>

        <div class="form-check">
            <input asp-for="CanView" class="form-check-input" />
            <label asp-for="CanView" class="form-check-label">Can View</label>
        </div>
        <div class="form-check">
            <input asp-for="CanUpload" class="form-check-input" />
            <label asp-for="CanUpload" class="form-check-label">Can Upload</label>
        </div>
        <div class="form-check">
            <input asp-for="CanEdit" class="form-check-input" />
            <label asp-for="CanEdit" class="form-check-label">Can Edit</label>
        </div>
        <div class="form-check">
            <input asp-for="CanDelete" class="form-check-input" />
            <label asp-for="CanDelete" class="form-check-label">Can Delete</label>
        </div>

        <button type="submit" class="btn btn-warning mt-3">Update</button>
        <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
    </form>
</div>