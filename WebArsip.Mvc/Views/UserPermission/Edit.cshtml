@model WebArsip.Mvc.Models.ViewModels.UserPermissionViewModel

@{
    ViewData["Title"] = "Edit User Permission";
    Layout = "_LayoutPrivate";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/user-permission/adduser-permission.css" />
<link rel="stylesheet" href="~/css/_responsive.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

<!-- ✅ TempData untuk SweetAlert -->
<div id="alert-data"
     data-success="@TempData["SuccessUP"]"
     data-error="@TempData["ErrorUP"]">
</div>

<div class="container mt-5 mb-5 user-permission-form">
    <div class="card glass-card shadow-lg border-0 p-4">
        <h3 class="fw-semibold mb-4 text-gradient">
            <i class="bi bi-pencil-square"></i> Edit User Permission
        </h3>

        <form asp-action="Edit" method="post" id="editPermissionForm">
            <input type="hidden" asp-for="Id" />

            <!-- Select User (read-only, karena tidak boleh ganti user) -->
            <div class="mb-4">
                <label class="form-label fw-semibold text-light">User</label>
                <input type="text" class="form-control form-control-glass text-black" value="@Model.UserEmail" readonly />
            </div>

            <!-- Select Document (read-only juga, biar tidak pindah dokumen lain) -->
            <div class="mb-4">
                <label class="form-label fw-semibold text-light">Document</label>
                <input type="text" class="form-control form-control-glass text-black" value="@Model.DocTitle" readonly />
            </div>

            <hr class="divider-light" />

            <!-- Permissions -->
            <h5 class="fw-semibold mb-3 text-gradient">
                <i class="bi bi-toggle-on"></i> Update Permissions
            </h5>

            <div class="row gy-2">
                <div class="col-md-6 col-lg-4">
                    <div class="form-check custom-check">
                        <input asp-for="CanView" class="form-check-input" />
                        <span class="badge bg-success">View</span>
                    </div>
                    <div class="form-check custom-check">
                        <input asp-for="CanDownload" class="form-check-input" />
                        <span class="badge bg-warning text-dark">Download</span>
                    </div>
                </div>
            </div>

            <div class="mt-5 d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary btn-glass">
                    <i class="bi bi-arrow-left-circle"></i> Back
                </a>
                <button type="submit" class="btn btn-primary btn-glass">
                    <i class="bi bi-save2"></i> Save Changes
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/user-permission/edituser-permission.js"></script>
}