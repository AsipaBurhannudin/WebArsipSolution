@model List<WebArsip.Mvc.Models.DocumentViewModel>

@{
    ViewData["Title"] = "Daftar Dokumen";
}

<h2>@ViewData["Title"]</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<table class="table table-striped table-bordered mt-3">
    <thead class="table-dark">
        <tr>
            <th>Doc ID</th>
            <th>Judul</th>
            <th>Deskripsi</th>
            <th>Status</th>
            <th>Dibuat</th>
            <th>Update Terakhir</th>
            <th>Aksi</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var doc in Model)
            {
                <tr>
                    <td>@doc.DocId</td>
                    <td>@doc.Title</td>
                    <td>@doc.Description</td>
                    <td>@doc.Status</td>
                    <td>@doc.CreatedDate.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        @(doc.UpdatedAt.HasValue
                            ? doc.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")
                            : "-")
                    </td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-controller="Document" asp-action="Details" asp-route-id="@doc.DocId">Detail</a>
                        <a class="btn btn-sm btn-warning" asp-controller="Document" asp-action="Edit" asp-route-id="@doc.DocId">Edit</a>
                        <a class="btn btn-sm btn-danger" asp-controller="Document" asp-action="Delete" asp-route-id="@doc.DocId">Hapus</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center text-muted">Belum ada dokumen</td>
            </tr>
        }
    </tbody>
</table>