@model WebArsip.Mvc.Models.ViewModels.DocumentViewModel

@{
    ViewData["Title"] = "➕ Add New Document";
    Layout = "_LayoutPrivate";
}

<link rel="stylesheet" href="~/css/document/form.css" />
<link rel="stylesheet" href="~/css/_responsive.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.bootstrap5.min.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-5 mb-5 document-create-container">
    <div class="card glass-card shadow-lg p-4">
        <h3 class="fw-semibold text-center text-gradient mb-4">
            <i class="bi bi-plus-circle"></i> Add New Document
        </h3>

        <form asp-action="Create" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>

            <!-- SERIAL FORMAT DROPDOWN -->
            <div class="mb-3">
                <label class="form-label text-light">Serial Format</label>
                <select id="SerialFormatId" name="SerialFormatId"
                        class="form-select bg-transparent text-light border-light serial-format-selector"
                        data-mode="single" required>
                    <option value="" selected disabled class="text-dark">-- Select Serial Format --</option>

                    @foreach (var sf in ViewBag.SerialFormats)
                    {
                        <option value="@sf.Id" class="text-dark">@sf.Name</option>
                    }
                </select>

                <div class="invalid-feedback text-warning">Please select a serial format.</div>
            </div>

            <!-- AUTO TITLE -->
            <div class="mb-3">
                <label class="form-label text-light">Document Title (Auto Generated)</label>
                <input asp-for="Title" id="AutoTitle" class="form-control form-control-lg text-light bg-transparent border-light" readonly />
                <div class="invalid-feedback text-warning">Document Title required.</div>
            </div>

            <!-- Description -->
            <div class="mb-3">
                <label class="form-label text-light">Description</label>
                <textarea asp-for="Description" class="form-control text-light bg-transparent border-light" rows="3"
                          required></textarea>
                <div class="invalid-feedback text-warning">Description cannot be empty.</div>
            </div>

            <!-- File Upload -->
            <div class="mb-4">
                <label class="form-label text-light">Upload File</label>
                <input type="file" name="FileUpload" class="form-control bg-transparent text-light border-light"
                       accept=".pdf,.doc,.docx,.xls,.xlsx" required />
                <div class="invalid-feedback text-warning">Please upload a valid document file.</div>
            </div>

            <!-- Status -->
            <div class="mb-4">
                <label class="form-label text-light">Status</label>
                <select asp-for="Status" class="form-select bg-transparent text-light border-light" required>
                    <option value="Published" class="text-dark">Published</option>
                </select>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-outline-light rounded-pill px-4">
                    <i class="bi bi-arrow-left-circle"></i> Back
                </a>
                <button type="submit" class="btn btn-glass px-4 rounded-pill">
                    <i class="bi bi-cloud-upload"></i> Upload Document
                </button>
            </div>
        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/js/serial-helper.js"></script>
